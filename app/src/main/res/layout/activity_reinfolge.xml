<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Pink"
    android:padding="16dp"
    android:id="@+id/mainLayout"
    tools:context=".ReinfolgeActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/textView2"
        android:background="@color/HotPink"
        android:gravity="center"
        android:text="wort 1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/violet"
        android:gravity="center"
        android:text="wort 2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/textView2"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="word 3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/textView3"
        android:background="@color/litered"
        android:gravity="center"
        android:text="wort 4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/textView4"
        android:background="@color/LiteOrangeRed"
        android:gravity="center"
        android:text="wort 5" />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="676dp"
        android:layout_height="65dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:backgroundTint="@color/liteorange"
        android:onClick="checkSentence"
        android:text="Überprüfen"
        android:textAllCaps="false"
        android:textColor="#4E342E" />

</RelativeLayout>
