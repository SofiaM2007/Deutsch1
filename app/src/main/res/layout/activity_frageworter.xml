<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/liteYelow"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    tools:context=".Frageworter">


    <Spinner
        android:id="@+id/fragewort"
        android:layout_width="219dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:entries="@array/Frageworter" />


    <TextView
        android:id="@+id/frage"
        android:layout_width="344dp"
        android:layout_height="42dp"
        android:layout_below="@+id/fragewort"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="119dp"
        android:layout_toEndOf="@+id/fragewort"
        android:text="Frage"
        android:textSize="20sp" />

    <Button
        android:id="@+id/check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/liteOrenge"
        android:layout_marginTop="16dp"
        android:text="Check"
        android:onClick="checkanswer" />

</RelativeLayout>